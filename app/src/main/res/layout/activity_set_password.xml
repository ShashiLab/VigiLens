

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_password_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/title_set_password"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/pin_circle_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/empty_pin_circle" />

        <View
            android:id="@+id/pin_circle_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/empty_pin_circle" />

        <View
            android:id="@+id/pin_circle_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/empty_pin_circle" />

        <View
            android:id="@+id/pin_circle_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/empty_pin_circle" />
    </LinearLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:columnCount="3"
        android:rowCount="4">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_1"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_2"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_3"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_4"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_5"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_6"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_7"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_8"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_9"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />


        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_0"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_del"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/key_button"
            android:text="@string/keypad_button_del"
            android:textColor="@color/md_theme_onBackground"
            android:textSize="24sp" />
    </GridLayout>

</LinearLayout>
