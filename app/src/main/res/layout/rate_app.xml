<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/card_corner_radius_large"
    app:cardElevation="@dimen/elevation_card"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_large"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/github_logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_github"
            android:contentDescription="@string/description_github_logo"
            android:layout_marginBottom="@dimen/margin_large" />

        <TextView
            android:id="@+id/rate_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_github_support"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium" />

        <TextView
            android:id="@+id/rate_dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_github_support"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium" />

        <TextView
            android:id="@+id/rate_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_github_star"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_large" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/card_corner_radius_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_star_reason"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message_star_benefits"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rate_dialog_positive_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_star_github"
            app:icon="@drawable/ic_github"
            app:iconTint="?attr/colorOnPrimary"
            app:cornerRadius="@dimen/card_corner_radius_medium"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="@dimen/margin_medium" />

        <TextView
            android:id="@+id/rate_dialog_negative_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_remind_later"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:padding="@dimen/padding_medium"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>